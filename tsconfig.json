{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~src/*": [ "./src/*" ],
            "~pkg": ["./package.json"]
        },
        "target": "es6",
        "strict": true,
        "module": "es2015",
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "jsx": "react"
    },
    "include": [
        "./src/*.d.ts",
        "./src/**/*.tsx",
        "./src/**/*.ts"
    ]
}
